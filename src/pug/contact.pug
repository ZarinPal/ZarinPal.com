extends partials/layout
block page-variables
    - var pageTitle = seed.lang[lang]['contactUs']
    - var pageBlackHeader = true

include partials/page_title

block content
    script
        | function initMap() {
        |    var uluru = {lat: 35.727317, lng: 51.416435};
        |    var map = new google.maps.Map(document.getElementById('map'), {
        |        zoom: 17,
        | center: uluru
        | });
        | var marker = new google.maps.Marker({
        |    position: uluru,
        |    animation: google.maps.Animation.BOUNCE,
        |    title: "zarinpal.com",
        |    map: map
        | });
        | }
    script(async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBGeACnKtvESiULBrraQxYQqZx6g1Jo1Ug&callback=initMap")

    include partials/header

    +pageTitle(seed.lang[lang]['pageTitle'])

    div.contact-page
        div.row
            div.col-xs-12
                div.map-container#map

        h2.title
            span.icon.icon-comment
            |   #{seed.lang[lang]['pageTitle']}

        div.contact-container
            div.row
                div.col-xs-12.col-md-5
                    div.contact-info
                        div.row
                            div.col-xs-12.address
                                p   #{seed.lang[lang]['address']['address']}
                            div.col-xs-6.phone
                                p   #{seed.lang[lang]['address']['phone']}
                            div.col-xs-6.fax
                                p   #{seed.lang[lang]['address']['fax']}
                            div.col-xs-6.post-code
                                p   #{seed.lang[lang]['address']['zipCode']}
                            div.col-xs-12
                                p   #{seed.lang[lang]['address']['workHours']}

                div.col-xs-12.col-md-7
                    div.contact-form.form-container
                        form
                            div.row
                                div.col-xs-12.col-md-4
                                    label
                                        span    #{seed.lang[lang]['formName']}
                                        input.form-input(type="text")
                                div.col-xs-12.col-md-4
                                    label
                                        span    #{seed.lang[lang]['formEmail']}
                                        input.form-input(type="email")
                                div.col-xs-12.col-md-4
                                    label
                                        span    #{seed.lang[lang]['formPhone']}
                                        input.form-input(type="text")
                            div.row
                                div.col-xs-12
                                    label
                                        span    #{seed.lang[lang]['formMessage']}
                                        textarea.form-input(rows=3)
                            div.ta-left
                                button.btn.btn-gold  #{seed.lang[lang]['formSubmit']}

    include partials/footer